{
  "name": "Bluetti to MQTT",
  "version": "1.0.7",
  "slug": "bluetti2mqtt",
  "description": "MQTT bridge between Bluetti and Home Assistant",
  "url": "https://github.com/SSMCD/bluetti2mqtt",
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "host_dbus": true,
  "usb": true,
  "map": ["share:rw"],
  "init": false,
  "services": ["mqtt:need"],
  "options": {
    "mqtt_username": "",
    "mqtt_password": "",
    "mqtt_host": "localhost",
    "mqtt_port": 1883,
    "bt_mac": "00:11:22:33:44:55",
    "poll_sec": 30,
    "ha_config": "normal",
    "scan": false,
    "debug": false,
    "log": false
  },
  "schema": {
    "mqtt_username": "str",
    "mqtt_password": "password",
    "mqtt_host": "str",
    "mqtt_port": "port",
    "bt_mac": "match(^([0-9A-Fa-f]{2}[:]){5}[0-9A-Fa-f]{2}( ([0-9A-Fa-f]{2}[:]){5}[0-9A-Fa-f]{2})*$)",
    "poll_sec": "int",
    "ha_config": "list(normal|none|advanced)",
    "scan": "bool",
    "debug": "bool",
    "log": "bool"
  }
}
